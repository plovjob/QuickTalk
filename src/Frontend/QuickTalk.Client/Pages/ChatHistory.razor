@page "/chatHistory"
@inject ChatManager ApiMessageService
<h3>Chat History</h3>
@if(messages != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Message Text</th>
                <th>Sent At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in messages)
            {
                <tr>
                    <td>@message.UserName</td>
                    <td>@message.Text</td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>Loading...</p>
}

@code {
    private List<MessageDto>? messages;
    protected override async Task OnInitializedAsync()
    {
        messages = await ApiMessageService.GetMessagesAsync();
    }
}
